
@using iShop.Web.ViewModel.Common
@model List<iShop.Web.ViewModel.Catalog.Products.ProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<div class="card mb-12">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <a class="btn btn-success" asp-action="Create" asp-controller="Product">Tao moi</a>
            </div>

            <div class="col-md-6 col-xs-12">
                <form method="get" asp-action="Index" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-10">
                            <input type="text" name="keyword" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">Tim</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                Mã SP
            </th>
            <th>
               Ma Ngon ngu
            </th>

            <th>
               Ten san pham
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Số lượng tồn
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    <div class="form-control">
                        @Html.DisplayFor(modelItem=>item.LanguageId)
                    </div>
                    </td>
                    <td>
                        <div class="form-control">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
</tr>
        }
    </tbody>
</table>




